        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBox x:Name="InputTextBox" Height="25"/>
        <Button Content="Вычислить" Click="CalculateButtonClick" Margin="0,5,0,0"/>
        <Label x:Name="ResultLabel" Margin="0,5,0,0"/>
    </StackPanel>
</Window>


