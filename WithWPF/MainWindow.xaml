<Window x:Class="WithWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="200" Width="300">
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="10">
        <TextBox x:Name="InputTextBox" Height="25" Width="200" Margin="0,0,0,1"
                 GotFocus="InputTextBox_GotFocus" LostFocus="InputTextBox_LostFocus"/>
        <TextBox x:Name="VariableValueTextBox" Height="25" Margin="0,0,0,1"
                 GotFocus="VariableValueTextBox_GotFocus" LostFocus="VariableValueTextBox_LostFocus"/>
        <Button Content="Вычислить" Click="CalculateButtonClick" Height="25" Margin="0,0,0,1" />
        <Label x:Name="ResultLabel" Height="25" Margin="0,0,0,1" />
    </StackPanel>
</Window>



