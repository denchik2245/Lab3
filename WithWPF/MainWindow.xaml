<Window x:Class="WithWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
        <TextBox x:Name="InputTextBox" Height="25" Width="100" Margin="0,0,0,10"
                 GotFocus="InputTextBox_GotFocus" LostFocus="InputTextBox_LostFocus"/>
        <TextBox x:Name="VariableValueTextBox" Height="25" Margin="0,0,0,10"
                 GotFocus="VariableValueTextBox_GotFocus" LostFocus="VariableValueTextBox_LostFocus"/>
        <Button Content="Вычислить" Click="CalculateButtonClick" Height="25" Margin="0,0,0,10" />
        <Label x:Name="ResultLabel" Height="25" Margin="0,0,0,10" />
    </StackPanel>
</Window>



