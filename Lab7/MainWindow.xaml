<Window x:Class="WithWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="График функции" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="StartValueTextBox" Width="100" Margin="0,0,10,0" Text="0"/>
            <TextBox x:Name="EndValueTextBox" Width="100" Margin="0,0,10,0" Text="10"/>
            <TextBox x:Name="StepTextBox" Width="100" Margin="0,0,10,0" Text="0.1"/>
            <TextBox x:Name="ScaleTextBox" Width="100" Margin="0,0,10,0" Text="1"/>
            <Button Content="Построить график" Click="PlotGraphButton_Click"/>
        </StackPanel>

        <Canvas x:Name="GraphCanvas" Grid.Row="1" Background="White"/>
    </Grid>
</Window>

